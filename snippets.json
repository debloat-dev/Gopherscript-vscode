{

	"forin": {
		"scope": "gopherscript",
		"prefix": "forin",
		"body": [
			"for $1, $2 in $3 {",
			"\t$0$4",
			"}"
		],
		"description": "for .. in loop"
	},
    "for10": {
		"scope": "gopherscript",
		"prefix": "for10",
		"body": [
			"for (1 .. 10) {",
			"\t$1",
			"}"
		],
		"description": "for (1.. 10) loop"
	},
    "for0n": {
		"scope": "gopherscript",
		"prefix": "for0n",
		"body": [
			"for (0 .. \\$n) {",
			"\t$1",
			"}"
		]
	},
    "for1n": {
		"scope": "gopherscript",
		"prefix": "for1n",
		"body": [
			"for (1 .. $$n) {",
			"\t$1",
			"}"
		]
	},
    "1_10": {
		"scope": "gopherscript",
		"prefix": "1_10",
		"body": [
			"(1 .. 10)"
		]
	},
    "1_n": {
		"scope": "gopherscript",
		"prefix": "1_n",
		"body": [
			"(1 .. \\$n)"
		]
	},
    "0_n": {
		"scope": "gopherscript",
		"prefix": "0_n",
		"body": [
			"(0 .. \\$n)"
		]
	},
	"min-require": {
		"scope": "gopherscript",
		"prefix": "req",
		"body": [
			"require {",
                "\tuse: {globals: \"*\"}",
                "\t$0",
            "}"
		],
		"description": "minimal require"
	},
    "switch": {
		"scope": "gopherscript",
		"prefix": "switch",
		"body": [
			"switch $1 {",
                "\t$2 {",
                "\t\t$3",
                "\t}",
            "}"
		],
		"description": "minimal switch statement"
	},
    "match": {
		"scope": "gopherscript",
		"prefix": "match",
		"body": [
			"match $1 {",
                "\t$2 {",
                "\t\t$3",
                "\t}",
            "}"
		],
		"description": "minimal match statement"
	},
    "import": {
        "scope": "gopherscript",
        "prefix": "import",
        "body": [
            "import res$1 https://$2.gos \"sha256$3\" {",
            "\t$4",
            "} allow {",
            "\t$5",
            "}"
        ]
    },
    "fn": {
        "scope": "gopherscript",
        "prefix": "fn",
        "body": [
            "fn (\\$$1){",
            "\t$2",
            "}"
        ]
    },
    "if": {
        "scope": "gopherscript",
        "prefix": "if",
        "body": [
            "if $1 {",
            "\t$2",
            "}"
        ]
    },
    "ifel": {
        "scope": "gopherscript",
        "prefix": "ifel",
        "body": [
            "if $1 {",
            "\t$2",
            "} else {",
            "\t$3",
            "}"
        ]
    },
    "in": {
        "scope": "gopherscript",
        "prefix": "in",
        "body": [
            "($1 in $2)"
        ]
    },
    "srm": {
        "scope": "gopherscript",
        "prefix": "srm",
        "body": [
            "sr .{$1} {",
            "\t$2",
            "} allow {",
            "\t$3",
            "}"
        ]
    }
}